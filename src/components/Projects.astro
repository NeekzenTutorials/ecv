---
import LogoKameleon from '../assets/Logo_Kameleon.png';
import LogoWordpress from '../assets/wordpress_logo.png';
import LogoPokeIUT from '../assets/pokiut_background.png';

const projects = [
  {
    title: 'Kameleon',
    description: 'Site web dynamique de jeux cryptographiques.<br /><br />Date: Oct 2024 - Jan 2025',
    image: LogoKameleon.src,
    link: '/projects/kameleon',
    tag: ['Python', 'Django', 'Vue.js', 'Node.js']
  },
  {
    title: 'Hébergement Wordpress Multisite',
    description: 'Mise en place d\'un hébergement Wordpress Multisite afin de permettre à des étudiants de déposer, créer et éditer leurs eCV.<br /><br />Date: Avr 2024 - Juin 2024',
    image: LogoWordpress.src,
    link: '/projects/wordpress',
    tag: ['Docker', 'Bash', 'Wordpress']
  },
  {
    title: 'PokIUT',
    description: 'Jeu Pokémon-Like en 3D réalisé sur le moteur de jeu Unity3D dans un délai de 2 semaines.<br /><br />Date: Dec 2024',
    image: LogoPokeIUT.src,
    link: '/projects/pokiut',
    tag: ['C#', 'Blender', 'Unity3D']
  },
];

const tagColors = {
  'Docker': '#007BFF',
  'Vue.js': '#42B883',
  'Python': '#FFD43B',
  'Django': '#0C4B33',
  'Node.js': '#68A063',
  'Bash': 'orange',
  'Wordpress': '#21759B',
  'C#': '#68217A',
  'Blender': '#F5792A',
  'Unity3D': 'grey'
};
---

<section class="projects-section">
  <h2>Mes Projets</h2>
  <div class="projects-grid">
    {projects.map(project => (
      <div class="project-card" key={project.title}>
        <a href={project.link}>
          <img src={project.image} alt={`Image de ${project.title}`} />
          <div class="project-info">
            <h3>{project.title}</h3>
            <p set:html={project.description}></p>
          </div>
          <div class="project-tags">
          {project.tag.map(tag => (
            <span class="tag" key={tag} style={{ backgroundColor: tagColors[tag] }}>
              {tag}
            </span>
          ))}
        </div>
        </a>
      </div>
    ))}
  </div>
</section>

<style>
  .projects-section {
    padding: 4rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    font-family: 'Inter', sans-serif;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .project-card a {
    color: inherit;
    text-decoration: none;
    display: block;
    height: 100%;
  }

  .project-card img {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: cover;
  }

  .project-info {
    padding: 1rem;
    text-align: left;
  }

  .project-info h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .project-info p {
    font-size: 1rem;
    color: #555;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 1rem;
    justify-content: flex-start;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    border-radius: 12px;
    color: rgb(0, 0, 0);
    font-size: 0.9rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  @media (max-width: 576px) {
    .projects-section h2 {
      font-size: 2rem;
    }

    .project-info h3 {
      font-size: 1.3rem;
    }

    .project-info p {
      font-size: 0.9rem;
    }
  }
</style>
